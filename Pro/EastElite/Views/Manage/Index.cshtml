@model  BLL.Cookie.TeUser
@{
    ViewBag.Title = "index";
    Layout = "~/Views/Shared/MP.cshtml";
}

<script src="~/Scripts/Menu.js" type="text/javascript"></script>
<script type="text/javascript">
    $(function () {
        $(".cMEMEF").click(function () {
            $(this).addClass("wGMtMgb").siblings().removeClass("wGMtMgb");
        })
        GetManage();
        setInterval("GetManage()", 30000);
    })
</script>
<body class="body">
    <div class="mainwrapper">
        @* 头部个人信息*@
        <div class="header">
            <div class="headerinner">
                <div style="float: left; height: 76px; margin-left:20px;">
                    <img style=" margin-top:5px; " src="~/Content/Img/logo.gif" />
                </div>
                <div style="float: left; height: 76px;">
                    <img style=" margin-top:5px; " src="~/Content/Img/logo2.png" />
                </div>
                <ul class="headmenu">
                    <li class="right">
                        <div class="userloggedinfo">
                            <div class="userinfo">
                                <h5>
                                    @Model.userName
                                    @switch( Model.userType )
                                    {
                                        case "1":
                                            <small>-教师</small>
                                            break;
                                        case "2":
                                        <small>-学生</small>
                                            break;
                                        case "3":
                                        <small>-家长</small>
                                            break;
                                        default:
                                            break;
                                    }
                                </h5>
                                <ul>
                                    <li>
                                        <a href="/Messger/List" target="left">站内信<span id="MessgerCount"> </span></a>
                                    </li>
                                    <li>
                                        <a href="/Home/OutLogin">退出登录</a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </li>
                </ul>

            </div>
            <div class="vyQHNyb">
                <span class="cMEMEF wGMtMgb">
                    <a title="网盘" target="left" href="/MyFile/MyFile">网盘</a>
                    <span class="gICyHO"></span>
                </span>
                @*<span class="cMEMEF ">
                        <a title="微课" target="_self" href="#">微课</a>
                        <span class="gICyHO"></span>
                    </span>*@
                <span class="cMEMEF ">
                    <a title="相册" target="left" href="/Details/ImgList">相册</a>
                    <span class="gICyHO"></span>
                </span>
                <span class="cMEMEF ">
                    <a title="更多" target="_self" href="#">更多</a>
                    <span class="gICyHO"></span>
                </span>
            </div>
        </div>
        <div class="conent">
            <div style="position: relative;">

                @* 菜单部分*@
                <div class="leftpanel">
                    <ul class="nav"></ul>
                </div>
                @* 小导航菜单*@
                <div class="rightpanel">

                    @* iframe 操作界面*@
                    <iframe width="100%" height="800px" frameborder="0" src="/MyFile/MyFile" scrolling="auto" onload="lowheight(this)" id="left" name="left"></iframe>
                </div>
            </div>

        </div>
        @*<div class="footer">

                <span> 东方博冠（北京）科技有限公司 版权所有 ©2016-2020</span>
                &nbsp; &nbsp; &nbsp; &nbsp;
                <span>技术支持: <a href="#">东方博冠（北京）科技有限公司 </a></span>

            </div>*@
